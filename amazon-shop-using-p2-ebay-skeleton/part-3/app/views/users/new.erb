
<% if @errors %>
  <% @errors.each do |error|%>
    <li class="alert alert-danger"> <%= error %> </li>
    <% end %>
  <% end %>

  <% if @successful %>
    <li class="alert alert-success"> <%= @successful %> </li>
    <% end %>
  
<br>
<br>

<div class = "container">
  <h1>Register as a new user</h1>

  <form id="new_user_form" method="POST" action="/users">

    <div class="container">
      <label><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="user[name]" required>

      <label><b>Email</b></label>
      <input type="text" placeholder="Enter Email" name="user[email]" required>

      <label><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="user[password]" required>

      <button type="submit">Register</button>
      <input type="checkbox" checked="checked"> Remember me
    </div>

    <div class="container" style="background-color:#f1f1f1">
      <button type="button" class="cancelbtn">Cancel</button>
      <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
  </form>
</div>